<form {{action "save" on="submit"}}>
<h2>{{errorMessage}}</h2>
  <p>
    <label> Name:
      {{input value=model.name}}
    </label>
  </p>
  <p>
    <label>User Name:
      {{input value=model.username }}
    </label>
  </p>
  <p>Event Sort:
<label>{{input click=(action "changeEventSort" "time") type="radio" name="eventSort" checked=true }} <span class="checkable">Time</span></label>
<label>{{input click=(action "changeEventSort" "mag") type="radio" name="eventSort"}} <span class="checkable">Mag</span></label>
  </p>
  <p>Station Sort:
<label>{{input click=(action "changeStationSort" "alpha") type="radio" name="stationSort" checked=true }} <span class="checkable">Alphabetical</span></label>
<label>{{input click=(action "changeStationSort" "distance") type="radio" name="stationSort"}} <span class="checkable">Distance</span></label>
  </p>
  <p>Primary Sort:
<label>{{input click=(action "changePrimarySort" "quake") type="radio" name="primarySort" checked=true }} <span class="checkable">Quake</span></label>
<label>{{input click=(action "changePrimarySort" "station") type="radio" name="primarySort"}} <span class="checkable">Station</span></label>
  </p>
  <input type="submit" value="Save"/>
  <button {{action "cancel"}}>Cancel</button>
</form>

