<div class="event">

{{event-info events=model.event stations=model.station}}

<p>Status: {{model.sodStatus}}</p>

{{world-map events=model.event station=model.station}}

</div>

<div class="event-station">
{{#each model.ecps as |ecp|}}
  <div class="ecp">{{ecp.id}} 
  {{#each ecp.channels as |ch|}} {{ch.siteCode}}.{{ch.channelCode}}{{/each}}
  {{ecp.sodStatus}} 
  {{waveform-display waveform=ecp.waveform plotWidth=400 plotHeight=100}} 
</div>
{{/each}}
</div>

{{outlet}}
